{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "../../packages/swapper" },
      { "path": "../../packages/types" }
    ]
  }
  
  