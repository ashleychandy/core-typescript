{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@swap-providers/types": ["packages/types/src"],
      "@swap-providers/swapper": ["packages/swapper/src"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
