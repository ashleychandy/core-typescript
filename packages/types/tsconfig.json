{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "composite": true,
    },
    "include": ["src/**/*"], // Include all files within the src directory.
    "exclude": ["node_modules", "dist"] // Exclude dependencies and the output directory.
  }
  