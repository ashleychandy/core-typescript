{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "composite": true, // Required for project references
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "../types" } // Path relative to this tsconfig.json
    ]
  }
  